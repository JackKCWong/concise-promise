{
    "exclude": [
        "node_modules",
        ".vscode",
        "lib"
    ],
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "lib",
        "rootDir": "src",
        "sourceMap": true,
        "lib": [
            "es6"
        ],
        "declaration": true,
        "noUnusedLocals": false,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "target": "es6"
    },
    "compileOnSave": true
}
